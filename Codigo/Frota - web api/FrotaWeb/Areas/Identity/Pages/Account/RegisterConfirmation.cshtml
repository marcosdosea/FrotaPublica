@page
@model RegisterConfirmationModel
@{
	ViewData["Title"] = "Confirmação da conta";
	Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Frota</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
	<link rel="stylesheet" href="~/css/root.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/identity.css" asp-append-version="true" />
</head>
<body class="register-page">
	<div class="register-container">
		<div class="card">
			<div class="card-body">
				<div class="login-form-header" style="text-align: center;">
					<div style="width: 80px; height: 80px; background: var(--info-50); border-radius: var(--radius-full); display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-4);">
						<i class="fas fa-envelope" style="font-size: var(--text-4xl); color: var(--info-600);"></i>
					</div>
					<h2 class="login-form-title">@ViewData["Title"]</h2>
					@if (@Model.DisplayConfirmAccountLink)
					{
						<p class="login-form-subtitle">Clique no link abaixo para confirmar sua conta</p>
						<div style="margin-top: var(--space-4);">
							<a id="confirm-link" href="@Model.EmailConfirmationUrl" class="login-form-submit" style="text-decoration: none; display: inline-block;">
								Confirmar conta
							</a>
						</div>
					}
					else
					{
						<p class="login-form-subtitle">Verifique seu email para confirmar a conta</p>
					}
				</div>

				<div style="text-align: center; margin-top: var(--space-6);">
					<a asp-page="./Login" class="login-form-forgot-link">
						<i class="fas fa-arrow-left"></i> Voltar para login
					</a>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
