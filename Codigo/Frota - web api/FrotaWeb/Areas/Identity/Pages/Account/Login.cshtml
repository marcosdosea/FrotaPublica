@page
@model LoginModel

@{
    ViewData["Title"] = "Login - Frota";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/root.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/identity.css" asp-append-version="true" />
</head>
<body class="login-page">
    <div class="login-container">
        <div class="login-visual">
            <div class="login-visual-content">
                <h1 class="login-visual-title">Frota</h1>
                <p class="login-visual-subtitle">Sistema moderno de gestão de frota pública</p>
            </div>
        </div>

        <div class="login-form">
            <div class="login-form-header">
                <h2 class="login-form-title">Olá novamente!</h2>
                <p class="login-form-subtitle">Bem-vindo de volta</p>
            </div>

            <form id="account" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="login-form-error">
                        <div asp-validation-summary="ModelOnly"></div>
                    </div>
                }

                <div class="login-form-group">
                    <label class="login-form-label" for="cpf-input">CPF</label>
                    <div class="login-form-input-wrapper">
                        <i class="fas fa-user login-form-input-icon"></i>
                        <input id="cpf-input" type="text" asp-for="Input.UserName" class="login-form-input" maxlength="14" required aria-required="true" placeholder="000.000.000-00" />
                    </div>
                    <span asp-validation-for="Input.UserName" class="login-form-error-text"></span>
                </div>

                <div class="login-form-group">
                    <label class="login-form-label" for="password">Senha</label>
                    <div class="login-form-input-wrapper">
                        <i class="fas fa-lock login-form-input-icon"></i>
                        <input id="password" type="password" asp-for="Input.Password" class="login-form-input" autocomplete="current-password" required aria-required="true" placeholder="Digite sua senha" />
                    </div>
                    <span asp-validation-for="Input.Password" class="login-form-error-text"></span>
                </div>

                <div class="login-form-options">
                    <div class="login-form-checkbox">
                        <input asp-for="Input.RememberMe" type="checkbox" id="rememberMe">
                        <label for="rememberMe" class="login-form-checkbox-label">Lembrar de mim</label>
                    </div>
                    <a asp-page="./ForgotPassword" class="login-form-forgot-link">Esqueceu a senha?</a>
                </div>

                <button id="login-submit" type="submit" class="login-form-submit">
                    Entrar
                </button>
            </form>
        </div>
    </div>

    <script>
        // CPF Mask
        document.getElementById('cpf-input').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            value = value.replace(/(\d{3})(\d)/, '$1.$2');
            value = value.replace(/(\d{3})(\d)/, '$1.$2');
            value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
            e.target.value = value;
        });
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
