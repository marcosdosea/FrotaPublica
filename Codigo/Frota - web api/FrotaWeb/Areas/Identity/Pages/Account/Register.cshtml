@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar novo Utilizador";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Frota</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/root.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/identity.css" asp-append-version="true" />
</head>
<body class="register-page">
    <div class="register-container">
        <div class="card">
            <div class="card-body">
                <div class="login-form-header">
                    <h2 class="login-form-title">Criar nova conta</h2>
                    <p class="login-form-subtitle">Preencha os dados abaixo</p>
        </div>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="login-form-error"></div>
                    
                    <div class="login-form-group">
                        <label class="login-form-label" for="email">Email</label>
                        <div class="login-form-input-wrapper">
                            <i class="fas fa-envelope login-form-input-icon"></i>
                            <input id="email" type="email" asp-for="Input.Email" class="login-form-input" autocomplete="username" aria-required="true" placeholder="seu@email.com" />
                    </div>
                        <span asp-validation-for="Input.Email" class="login-form-error-text"></span>
                </div>

                    <div class="login-form-group">
                        <label class="login-form-label" for="password">Senha</label>
                        <div class="login-form-input-wrapper">
                            <i class="fas fa-lock login-form-input-icon"></i>
                            <input id="password" type="password" asp-for="Input.Password" class="login-form-input" autocomplete="new-password" aria-required="true" placeholder="Digite sua senha" />
                    </div>
                        <span asp-validation-for="Input.Password" class="login-form-error-text"></span>
                </div>

                    <div class="login-form-group">
                        <label class="login-form-label" for="confirmPassword">Confirmar Senha</label>
                        <div class="login-form-input-wrapper">
                            <i class="fas fa-lock login-form-input-icon"></i>
                            <input id="confirmPassword" type="password" asp-for="Input.ConfirmPassword" class="login-form-input" autocomplete="new-password" aria-required="true" placeholder="Confirme sua senha" />
                    </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="login-form-error-text"></span>
                </div>

                    <button id="registerSubmit" type="submit" class="login-form-submit">
                        Registrar
                </button>

                    <div style="text-align: center; margin-top: var(--space-4);">
                        <a asp-page="./Login" class="login-form-forgot-link">
                            <i class="fas fa-arrow-left"></i> Voltar para login
                        </a>
                </div>
            </form>
        </div>
    </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
