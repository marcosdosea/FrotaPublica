@model FrotaWeb.Models.ManutencaoViewModel
@using System.Globalization

@{
    var culture = new CultureInfo("pt-BR");
    var entityName = "Manutenção";
    var controllerName = "Manutencao";
    var idValue = Model.Id;
    decimal valorPecas = 0;
    decimal valorManutencao = 0;
    decimal.TryParse(Model.ValorPecas?.Replace(",", "."), System.Globalization.NumberStyles.Any, System.Globalization.CultureInfo.InvariantCulture, out valorPecas);
    decimal.TryParse(Model.ValorManutencao?.Replace(",", "."), System.Globalization.NumberStyles.Any, System.Globalization.CultureInfo.InvariantCulture, out valorManutencao);
}

<div class="delete-page">
    <div class="delete-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="delete-title">Excluir @entityName</h1>
    </div>

    <div class="delete-card">
        <div class="delete-warning">
            <div class="delete-warning-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3 class="delete-warning-title">Tem certeza que deseja excluir?</h3>
            <p class="delete-warning-text">Esta ação não pode ser desfeita. Todos os dados relacionados serão permanentemente removidos.</p>
        </div>

        <div class="delete-body">
            <div class="details-body">
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-hashtag"></i>
                        Código
                    </span>
                    <span class="details-value">@Model.Id</span>
                </div>
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-car"></i>
                        Veículo
                    </span>
                    <span class="details-value">@(Model.PlacaVeiculo ?? Model.IdVeiculo.ToString())</span>
                </div>
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-building"></i>
                        Fornecedor
                    </span>
                    <span class="details-value">@Model.IdFornecedor</span>
                </div>
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-calendar-alt"></i>
                        Data/Hora
                    </span>
                    <span class="details-value">@Model.DataHora.ToString("dd/MM/yyyy HH:mm", culture)</span>
                </div>
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-user-tie"></i>
                        Responsável
                    </span>
                    <span class="details-value">@(Model.NomeResponsavel ?? Model.IdResponsavel.ToString())</span>
                </div>
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-tag"></i>
                        Tipo
                    </span>
                    <span class="details-value">@Model.Tipo</span>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="delete-form">
            @if (idValue != null)
            {
                <input type="hidden" name="id" value="@idValue" />
            }
            <div class="form-actions">
                <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Confirmar Exclusão
                </button>
            </div>
        </form>
    </div>
</div>
