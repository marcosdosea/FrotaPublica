@model FrotaWeb.Models.ModeloVeiculoViewModel

@{
    var entityName = "Modelo de Veículo";
    var controllerName = "ModeloVeiculo";
}

<div class="edit-page">
    <div class="edit-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="edit-title">Editar @entityName</h1>
    </div>

    <div class="edit-card">
        <form asp-action="Edit" method="post" class="edit-form">
            <div asp-validation-summary="ModelOnly" class="form-error"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="IdMarcaVeiculo" class="form-label">Marca</label>
                <div class="input-group">
                    <i class="fas fa-tag input-icon"></i>
                    <input asp-for="IdMarcaVeiculo" class="form-input input-numero" type="number" />
                </div>
                <span asp-validation-for="IdMarcaVeiculo" class="form-error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="form-label">Nome</label>
                <div class="input-group">
                    <i class="fas fa-car input-icon"></i>
                    <input asp-for="Nome" class="form-input input-md" placeholder="Nome do modelo" />
                </div>
                <span asp-validation-for="Nome" class="form-error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="CapacidadeTanque" class="form-label">Capacidade do Tanque</label>
                <div class="input-group">
                    <i class="fas fa-gas-pump input-icon"></i>
                    <input asp-for="CapacidadeTanque" class="form-input input-numero" placeholder="50" type="number" />
                </div>
                <span asp-validation-for="CapacidadeTanque" class="form-error-text"></span>
            </div>

            <div class="form-actions">
                <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
