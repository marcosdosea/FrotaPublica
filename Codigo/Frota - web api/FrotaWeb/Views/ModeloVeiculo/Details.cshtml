@model FrotaWeb.Models.ModeloVeiculoViewModel

@{
    var entityName = "Modelo de Veículo";
    var controllerName = "ModeloVeiculo";
}

<div class="details-page">
    <div class="details-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="details-title">
            <i class="fas fa-eye"></i>
            Visualizar @entityName
        </h1>
    </div>

    <div class="details-card">
        <div class="details-body">
            <div class="details-item">
                <span class="details-label">Marca</span>
                <span class="details-value">@Model.IdMarcaVeiculo</span>
            </div>
            <div class="details-item">
                <span class="details-label">Nome</span>
                <span class="details-value">@Model.Nome</span>
            </div>
            <div class="details-item">
                <span class="details-label">Capacidade do Tanque</span>
                <span class="details-value">@Model.CapacidadeTanque L</span>
            </div>
        </div>

        <div class="details-actions">
            <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                <i class="fas fa-list"></i> Voltar para Lista
            </a>
            <a asp-action="Edit" asp-controller="@controllerName" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>
</div>
