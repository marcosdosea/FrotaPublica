@model FrotaWeb.Models.VistoriaViewModel
@using System.Globalization

@{
    var entityName = "Vistoria";
    var controllerName = "Vistoria";
    var culture = new CultureInfo("pt-BR");
}

<div class="edit-page">
    <div class="edit-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="edit-title">Editar @entityName</h1>
    </div>

    <div class="edit-card">
        <form asp-action="Edit" method="post" class="edit-form">
            <div asp-validation-summary="ModelOnly" class="form-error"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Data" class="form-label">
                        <i class="fas fa-calendar-alt"></i>
                        Data
                    </label>
                    <div class="input-group">
                        <i class="fas fa-calendar input-icon"></i>
                        <input asp-for="Data" class="form-input input-data" type="date" />
                    </div>
                    <span asp-validation-for="Data" class="form-error-text"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Tipo" class="form-label">
                        <i class="fas fa-tag"></i>
                        Tipo
                    </label>
                    <div class="input-group">
                        <i class="fas fa-tag input-icon"></i>
                        <input asp-for="Tipo" class="form-input input-md" placeholder="Tipo de vistoria" />
                    </div>
                    <span asp-validation-for="Tipo" class="form-error-text"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="IdPessoaResponsavel" class="form-label">
                    <i class="fas fa-user-tie"></i>
                    Responsável
                </label>
                <div class="input-group">
                    <i class="fas fa-user-tie input-icon"></i>
                    <input asp-for="IdPessoaResponsavel" class="form-input input-numero" type="number" placeholder="ID do Responsável" />
                </div>
                <span asp-validation-for="IdPessoaResponsavel" class="form-error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="Problemas" class="form-label">
                    <i class="fas fa-exclamation-triangle"></i>
                    Problemas
                </label>
                <div class="input-group">
                    <i class="fas fa-exclamation-triangle input-icon"></i>
                    <textarea asp-for="Problemas" class="form-input" rows="4" placeholder="Descreva os problemas encontrados"></textarea>
                </div>
                <span asp-validation-for="Problemas" class="form-error-text"></span>
            </div>

            <div class="form-actions">
                <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
