@model IEnumerable<FrotaWeb.Models.VistoriaViewModel>
@using System.Globalization

@{
    var culture = new CultureInfo("pt-BR");
}

<main class="main-content">
    <div class="page-header">
        <div class="page-header-content">
            <a href="javascript:history.back()" class="btn btn-tertiary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
            <h1 class="page-title">Vistorias</h1>
        </div>
        <div class="page-header-actions">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Criar Novo
            </a>
        </div>
    </div>

    <div class="filters-container">
        <div class="filter-group">
            <label class="filter-label">Buscar</label>
            <div class="input-group">
                <i class="fas fa-search input-icon"></i>
                <input type="text" class="form-input" placeholder="Buscar..." id="searchInput" />
            </div>
        </div>
        <div class="filter-actions">
            <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                <i class="fas fa-times"></i> Limpar
            </button>
        </div>
    </div>

    <div class="table-container">
        <div class="table-wrapper">
            <table class="table-modern">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Problemas</th>
                        <th>Tipo</th>
                        <th>Responsável</th>
                        <th class="text-right">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-id="@item.Id" data-details-url="@Url.Action("Details", "Vistoria", new { id = item.Id })">
                            <td>@(item.Data.ToString("dd/MM/yyyy", culture))</td>
                            <td>@Html.DisplayFor(modelItem => item.Problemas)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdPessoaResponsavel)</td>
                            <td>
                                <div class="table-actions">
                                    <a href="@Url.Action("Details", "Vistoria", new { id = item.Id })" class="table-action-btn details" title="Detalhes" onclick="event.stopPropagation()">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "Vistoria", new { id = item.Id })" class="table-action-btn edit" title="Editar" onclick="event.stopPropagation()">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Vistoria", new { id = item.Id })" class="table-action-btn delete" title="Excluir" onclick="event.stopPropagation()">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @{
        var pagedResult = ViewBag.PagedResult as PagedResult<VistoriaViewModel>;
    }
    @if (pagedResult != null && pagedResult.TotalPages > 1)
    {
        <nav class="pagination-container">
            <div class="pagination">
                @if (pagedResult.HasPreviousPage)
                {
                    <a href="@Url.Action("Index", "Vistoria", new { page = pagedResult.CurrentPage - 1 })" class="pagination-btn">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                }
                
                @for (int i = Math.Max(0, pagedResult.CurrentPage - 2); i <= Math.Min(pagedResult.TotalPages - 1, pagedResult.CurrentPage + 2); i++)
                {
                    <a href="@Url.Action("Index", "Vistoria", new { page = i })" class="pagination-btn @(i == pagedResult.CurrentPage ? "active" : "")">
                        @(i + 1)
                    </a>
                }
                
                @if (pagedResult.HasNextPage)
                {
                    <a href="@Url.Action("Index", "Vistoria", new { page = pagedResult.CurrentPage + 1 })" class="pagination-btn">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                }
            </div>
        </nav>
    }
</main>

<script>
    function clearFilters() {
        document.getElementById('searchInput').value = '';
        const rows = document.querySelectorAll('.table-modern tbody tr');
        rows.forEach(row => row.style.display = '');
    }

    document.getElementById('searchInput')?.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('.table-modern tbody tr');
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });

    document.querySelectorAll('.table-modern tbody tr[data-details-url]').forEach(row => {
        row.addEventListener('click', function() {
            const url = this.getAttribute('data-details-url');
            if (url) window.location.href = url;
        });
        row.style.cursor = 'pointer';
    });
</script>
