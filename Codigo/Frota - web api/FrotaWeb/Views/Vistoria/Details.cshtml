@model FrotaWeb.Models.VistoriaViewModel
@using System.Globalization

@{
    var culture = new CultureInfo("pt-BR");
    var entityName = "Vistoria";
    var controllerName = "Vistoria";
}

<div class="details-page">
    <div class="details-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="details-title">Visualizar @entityName</h1>
    </div>

    <div class="details-card">
        <div class="details-body">
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-hashtag"></i>
                    Código
                </span>
                <span class="details-value">@Model.Id</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-calendar-alt"></i>
                    Data
                </span>
                <span class="details-value">@Model.Data.ToString("dd/MM/yyyy", culture)</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-tag"></i>
                    Tipo
                </span>
                <span class="details-value">@Model.Tipo</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-user-tie"></i>
                    Responsável
                </span>
                <span class="details-value">@Model.IdPessoaResponsavel</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-exclamation-triangle"></i>
                    Problemas
                </span>
                <span class="details-value">@Model.Problemas</span>
            </div>
        </div>

        <div class="details-actions">
            <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                <i class="fas fa-list"></i> Voltar para Lista
            </a>
            <a asp-action="Edit" asp-controller="@controllerName" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>
</div>
