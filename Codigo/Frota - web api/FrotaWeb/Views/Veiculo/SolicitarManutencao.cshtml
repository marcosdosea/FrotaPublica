@model FrotaWeb.Models.SolicitacaoManutencaoViewModel

<link rel="stylesheet" href="~/css/form-pages.css" asp-append-version="true" />

<main class="main_content container">
    <div class="titulo-pagina">
        <a href="javascript:history.back()" class="voltar">
            <i class="fa fa-arrow-left"></i> Voltar
        </a>
        <h1>Solicitar Manutenção</h1>
    </div>
    <div class="fomulario">
        <form asp-action="SolicitarManutencao" asp-route-idPercurso="@ViewBag.IdPercurso" asp-route-idVeiculo="@ViewBag.IdVeiculo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="IdVeiculo" />
            <input type="hidden" asp-for="IdPessoa" />
            <input type="hidden" asp-for="DataSolicitacao" />

            <div class="form-group">
                <label asp-for="DescricaoProblema" class="control-label">Descrição do Problema</label>
                <textarea asp-for="DescricaoProblema" class="form-control" rows="4"></textarea>
                <span asp-validation-for="DescricaoProblema" class="text-danger"></span>
            </div>

            <div class="buttons">
                <input type="submit" value="Enviar Solicitação" class="btn btn-primary" />
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
