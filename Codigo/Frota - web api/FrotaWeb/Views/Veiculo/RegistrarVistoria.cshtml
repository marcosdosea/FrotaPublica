@model FrotaWeb.Models.VistoriaViewModel

<link rel="stylesheet" href="~/css/form-pages.css" asp-append-version="true" />

<main class="main_content container">
    <div class="titulo-pagina">
        <a href="javascript:history.back()" class="voltar">
            <i class="fa fa-arrow-left"></i> Voltar
        </a>
        <h1>Registrar Vistoria</h1>
    </div>
    <div class="formulario">
        <form asp-action="RegistrarVistoria" asp-route-idPercurso="@ViewBag.IdPercurso" asp-route-idVeiculo="@ViewBag.IdVeiculo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="IdPessoaResponsavel" />
            <input type="hidden" asp-for="Data" />

            <div class="form-group">
                <label asp-for="Tipo" class="control-label">Tipo de Vistoria</label>
                <select asp-for="Tipo" class="form-control">
                    <option value="S">Saída</option>
                    <option value="R">Retorno</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Problemas" class="control-label">Problemas Identificados</label>
                <textarea asp-for="Problemas" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Problemas" class="text-danger"></span>
            </div>

            <div class="buttons">
                <input type="submit" value="Registrar Vistoria" class="btn btn-primary" />
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
