@model IEnumerable<FrotaWeb.Models.VeiculoViewModel>

<main class="main-content">
    <div class="page-header">
        <div class="page-header-content">
            <a href="javascript:history.back()" class="btn btn-tertiary">
                <i class="fas fa-arrow-left"></i> Voltar
        </a>
            <h1 class="page-title">Veículos Disponíveis</h1>
        </div>
        <div class="page-header-actions">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Criar Novo
            </a>
        </div>
    </div>

    <div class="filters-container">
        <div class="filter-group">
            <label class="filter-label">Buscar por Placa</label>
            <div class="input-group">
                <i class="fas fa-search input-icon"></i>
                <input type="text" class="form-input" placeholder="Buscar por placa..." id="searchInput" value="@ViewBag.CurrentPlaca" />
            </div>
        </div>
        <div class="filter-actions">
            <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                <i class="fas fa-times"></i> Limpar
                    </button>
                </div>
        </div>

    <div class="table-container">
        <div class="table-wrapper">
            <table class="table-modern">
            <thead>
                <tr>
                    <th>Modelo</th>
                    <th>@Html.DisplayNameFor(model => model.Placa)</th>
                    <th>@Html.DisplayNameFor(model => model.Cor)</th>
                    <th>Status</th>
                        <th class="text-right">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr data-id="@item.Id" data-details-url="@Url.Action("Details", "Veiculo", new { id = item.Id })">
                            <td>@Html.DisplayFor(modelItem => item.ModeloNome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Placa)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cor)</td>
                            <td>
                                <span class="badge badge-success">
                                    @Html.DisplayFor(modelItem => item.StatusNome)
                                </span>
                            </td>
                        <td>
                                <div class="table-actions">
                                    <a href="@Url.Action("Usar", "Veiculo", new { id = item.Id })" class="table-action-btn details" title="Usar" onclick="event.stopPropagation()">
                                        <i class="fas fa-check"></i>
                            </a>
                                </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>

    @{
        var pagedResult = ViewBag.PagedResult as PagedResult<VeiculoViewModel>;
    }
    @if (pagedResult != null && pagedResult.TotalPages > 1)
    {
        <nav class="pagination-container">
            <div class="pagination">
                @if (pagedResult.HasPreviousPage)
                {
                    <a href="@Url.Action("VeiculosDisponiveis", "Veiculo", new { page = pagedResult.CurrentPage - 1, placa = ViewBag.CurrentPlaca })" class="pagination-btn">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                }
                
                @for (int i = Math.Max(0, pagedResult.CurrentPage - 2); i <= Math.Min(pagedResult.TotalPages - 1, pagedResult.CurrentPage + 2); i++)
                {
                    <a href="@Url.Action("VeiculosDisponiveis", "Veiculo", new { page = i, placa = ViewBag.CurrentPlaca })" class="pagination-btn @(i == pagedResult.CurrentPage ? "active" : "")">
                        @(i + 1)
                    </a>
                }
                
                @if (pagedResult.HasNextPage)
                {
                    <a href="@Url.Action("VeiculosDisponiveis", "Veiculo", new { page = pagedResult.CurrentPage + 1, placa = ViewBag.CurrentPlaca })" class="pagination-btn">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                }
            </div>
        </nav>
    }
</main>

<script>
    function clearFilters() {
        document.getElementById('searchInput').value = '';
        window.location.href = '@Url.Action("VeiculosDisponiveis", "Veiculo")';
    }

    // Busca em tempo real
    document.getElementById('searchInput')?.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('.table-modern tbody tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });

    // Click na linha para ver detalhes
    document.querySelectorAll('.table-modern tbody tr[data-details-url]').forEach(row => {
        row.addEventListener('click', function() {
            const url = this.getAttribute('data-details-url');
            if (url) {
                window.location.href = url;
            }
        });
        row.style.cursor = 'pointer';
    });
</script>
