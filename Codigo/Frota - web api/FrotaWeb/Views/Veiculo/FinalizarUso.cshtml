@model FrotaWeb.Models.PercursoViewModel

<link rel="stylesheet" href="~/css/form-pages.css" asp-append-version="true" />

<main class="main_content container">
    <div class="titulo-pagina">
        <a href="javascript:history.back()" class="voltar">
            <i class="fa fa-arrow-left"></i> Voltar
        </a>
        <h1>Finalizar Uso do Veículo</h1>
    </div>
    <div class="formulario">
        <form asp-action="FinalizarUso" asp-route-idPercurso="@ViewBag.IdPercurso" asp-route-idVeiculo="@ViewBag.IdVeiculo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdVeiculo" />
            <input type="hidden" asp-for="IdPessoa" />
            <input type="hidden" asp-for="DataHoraSaida" />
            <input type="hidden" asp-for="LocalPartida" />
            <input type="hidden" asp-for="LocalChegada" />
            <input type="hidden" asp-for="OdometroInicial" />
            <input type="hidden" asp-for="Motivo" />
            <input type="hidden" asp-for="DataHoraRetorno" />

            <div class="form-group">
                <label asp-for="OdometroFinal" class="control-label">Odômetro Final</label>
                <input asp-for="OdometroFinal" class="form-control" />
                <span asp-validation-for="OdometroFinal" class="text-danger"></span>
            </div>

            <div class="alert alert-info">
                <p><strong>Informações do Percurso:</strong></p>
                <ul>
                    <li>Data/Hora Saída: @Model.DataHoraSaida.ToString("dd/MM/yyyy HH:mm")</li>
                    <li>Local de Partida: @Model.LocalPartida</li>
                    <li>Local de Chegada: @Model.LocalChegada</li>
                    <li>Odômetro Inicial: @Model.OdometroInicial km</li>
                    <li>Motivo: @Model.Motivo</li>
                </ul>
            </div>

            <div class="buttons">
                <input type="submit" value="Finalizar Uso" class="btn btn-primary" />
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
