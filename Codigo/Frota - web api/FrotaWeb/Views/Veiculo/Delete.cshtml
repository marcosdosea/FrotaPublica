@model FrotaWeb.Models.VeiculoViewModel
@using System.Globalization

@{
    ViewBag.EntityName = "Veículo";
    ViewBag.ControllerName = "Veiculo";
    ViewBag.Id = Model.Id;
    var culture = new CultureInfo("pt-BR");
    var entityName = ViewBag.EntityName ?? "Item";
    var controllerName = ViewBag.ControllerName ?? "";
    var idValue = ViewBag.Id;
}

<div class="delete-page">
    <div class="delete-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="delete-title">Excluir @entityName</h1>
    </div>

    <div class="delete-card">
        <div class="delete-warning">
            <div class="delete-warning-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3 class="delete-warning-title">Tem certeza que deseja excluir?</h3>
            <p class="delete-warning-text">Esta ação não pode ser desfeita. Todos os dados relacionados serão permanentemente removidos.</p>
        </div>

        <div class="delete-body">
            <div class="details-body">
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-id-card"></i>
                        Placa
                    </span>
                    <span class="details-value">@Model.Placa</span>
                </div>
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-car-side"></i>
                        Modelo
                    </span>
                    <span class="details-value">@Model.ModeloNome</span>
                </div>
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-palette"></i>
                        Cor
                    </span>
                    <span class="details-value">@Model.Cor</span>
                </div>
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-info-circle"></i>
                        Status
                    </span>
                    <span class="details-value">
                        <span class="badge @(Model.Status == "U" ? "badge-warning" : Model.Status == "M" ? "badge-error" : "badge-success")">
                            @Model.StatusNome
                        </span>
                    </span>
                </div>
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-tachometer-alt"></i>
                        Odômetro
                    </span>
                    <span class="details-value">@Model.Odometro km</span>
                </div>
                <div class="details-item">
                    <span class="details-label">
                        <i class="fas fa-dollar-sign"></i>
                        Valor
                    </span>
                    <span class="details-value">
                        @if (!string.IsNullOrEmpty(Model.Valor) && decimal.TryParse(Model.Valor, NumberStyles.Any, culture, out var valorDecimal))
                        {
                            @valorDecimal.ToString("C", culture)
                        }
                        else
                        {
                            @Model.Valor
                        }
                    </span>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="delete-form">
            @if (idValue != null)
            {
                <input type="hidden" name="id" value="@idValue" />
            }
            <div class="form-actions">
                <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Confirmar Exclusão
                </button>
            </div>
        </form>
    </div>
</div>
