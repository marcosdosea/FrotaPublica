@model FrotaWeb.Models.VeiculoViewModel
@using System.Globalization

@{
    ViewBag.EntityName = "Veículo";
    ViewBag.ControllerName = "Veiculo";
    ViewBag.Id = Model.Id;
    var culture = new CultureInfo("pt-BR");
    var entityName = ViewBag.EntityName ?? "Item";
    var controllerName = ViewBag.ControllerName ?? "";
}

<div class="details-page">
    <div class="details-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="details-title">Visualizar @entityName</h1>
    </div>

    <div class="details-card">
        <div class="details-body">
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-building"></i>
                    Unidade Administrativa
                </span>
                <span class="details-value">@Model.IdUnidadeAdministrativa</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-truck"></i>
                    Frota
                </span>
                <span class="details-value">@Model.IdFrota</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-id-card"></i>
                    Placa
                </span>
                <span class="details-value">@Model.Placa</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-barcode"></i>
                    Chassi
                </span>
                <span class="details-value">@(Model.Chassi ?? "-")</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-dollar-sign"></i>
                    Valor do Veículo
                </span>
                <span class="details-value">
                    @if (!string.IsNullOrEmpty(Model.Valor) && decimal.TryParse(Model.Valor, NumberStyles.Any, culture, out var valorDecimal))
                    {
                        @valorDecimal.ToString("C", culture)
                    }
                    else
                    {
                        @Model.Valor
                    }
                </span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-car-side"></i>
                    Modelo Veículo
                </span>
                <span class="details-value">@Model.IdModeloVeiculo</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-calendar"></i>
                    Data Referência (Valor)
                </span>
                <span class="details-value">@Model.DataReferenciaValor.ToString("dd/MM/yyyy", culture)</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-palette"></i>
                    Cor
                </span>
                <span class="details-value">@Model.Cor</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-tachometer-alt"></i>
                    Odômetro
                </span>
                <span class="details-value">@Model.Odometro km</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-info-circle"></i>
                    Status
                </span>
                <span class="details-value">
                    <span class="badge @(Model.Status == "U" ? "badge-warning" : Model.Status == "M" ? "badge-error" : "badge-success")">
                        @Model.StatusNome
                    </span>
                </span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-calendar-alt"></i>
                    Ano
                </span>
                <span class="details-value">@Model.Ano</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-car"></i>
                    Modelo
                </span>
                <span class="details-value">@Model.Modelo</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-file-alt"></i>
                    Renavan
                </span>
                <span class="details-value">@(Model.Renavan ?? "-")</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-calendar-check"></i>
                    Vencimento IPVA
                </span>
                <span class="details-value">@(Model.VencimentoIpva?.ToString("dd/MM/yyyy", culture) ?? "-")</span>
            </div>
        </div>

        <div class="details-actions">
            <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                <i class="fas fa-list"></i> Voltar para Lista
            </a>
            <a asp-action="Edit" asp-controller="@controllerName" asp-route-id="@ViewBag.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>
</div>
