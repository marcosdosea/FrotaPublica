@model IEnumerable<FrotaWeb.Models.PessoaViewModel>

@{
    string textSearch = ViewBag.Search;
    string filterBy = ViewBag.FilterBy ?? "Nome";
}

<main class="main-content">
    <div class="page-header">
        <div class="page-header-content">
            <a href="javascript:history.back()" class="btn btn-tertiary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
            <h1 class="page-title">Condutores</h1>
        </div>
        <div class="page-header-actions">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Criar Novo
            </a>
        </div>
    </div>

    <div class="filters-container">
        <div class="filter-group">
            <label class="filter-label">Filtrar por</label>
            <div class="select-wrapper">
                <select class="select-modern select-md" id="filterBy">
                    @if (filterBy == "Nome")
                    {
                        <option value="Nome" selected>Nome</option>
                    }
                    else
                    {
                        <option value="Nome">Nome</option>
                    }
                    @if (filterBy == "Cpf")
                    {
                        <option value="Cpf" selected>CPF</option>
                    }
                    else
                    {
                        <option value="Cpf">CPF</option>
                    }
                    @if (filterBy == "Cidade")
                    {
                        <option value="Cidade" selected>Cidade</option>
                    }
                    else
                    {
                        <option value="Cidade">Cidade</option>
                    }
                </select>
            </div>
        </div>
        <div class="filter-group">
            <label class="filter-label">Buscar</label>
            <div class="input-group">
                <i class="fas fa-search input-icon"></i>
                <input type="text" class="form-input" placeholder="Procurar..." id="searchInput" value="@textSearch" />
            </div>
        </div>
        <div class="filter-actions">
            <button type="button" class="btn btn-primary" onclick="applyFilter()">
                <i class="fas fa-search"></i> Buscar
            </button>
            <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                <i class="fas fa-times"></i> Limpar
            </button>
        </div>
    </div>

    <div class="table-container">
        <div class="table-wrapper">
            <table class="table-modern">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Cpf)</th>
                        <th>@Html.DisplayNameFor(model => model.Estado)</th>
                        <th>@Html.DisplayNameFor(model => model.StatusAtivo)</th>
                        <th class="text-right">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-id="@item.Id" data-details-url="@Url.Action("Details", "Pessoa", new { id = item.Id })">
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cpf)</td>
                            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                            <td>
                                <span class="badge @(item.StatusAtivo == "Ativo" ? "badge-success" : "badge-error")">
                                    @(item.StatusAtivo == "Ativo" ? "Ativo" : "Inativo")
                                </span>
                            </td>
                            <td>
                                <div class="table-actions">
                                    <a href="@Url.Action("Details", "Pessoa", new { id = item.Id })" class="table-action-btn details" title="Detalhes" onclick="event.stopPropagation()">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "Pessoa", new { id = item.Id })" class="table-action-btn edit" title="Editar" onclick="event.stopPropagation()">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Pessoa", new { id = item.Id })" class="table-action-btn delete" title="Excluir" onclick="event.stopPropagation()">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @{
        var pagedResult = ViewBag.PagedResult as PagedResult<PessoaViewModel>;
    }
    @if (pagedResult != null && pagedResult.TotalPages > 1)
    {
        <nav class="pagination-container">
            <div class="pagination">
                @if (pagedResult.HasPreviousPage)
                {
                    <a href="@Url.Action("Index", "Pessoa", new { page = pagedResult.CurrentPage - 1, search = textSearch, filterBy = filterBy })" class="pagination-btn">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                }
                
                @for (int i = Math.Max(0, pagedResult.CurrentPage - 2); i <= Math.Min(pagedResult.TotalPages - 1, pagedResult.CurrentPage + 2); i++)
                {
                    <a href="@Url.Action("Index", "Pessoa", new { page = i, search = textSearch, filterBy = filterBy })" class="pagination-btn @(i == pagedResult.CurrentPage ? "active" : "")">
                        @(i + 1)
                    </a>
                }
                
                @if (pagedResult.HasNextPage)
                {
                    <a href="@Url.Action("Index", "Pessoa", new { page = pagedResult.CurrentPage + 1, search = textSearch, filterBy = filterBy })" class="pagination-btn">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                }
            </div>
        </nav>
    }
</main>

<script>
    function applyFilter() {
        const filterBy = document.getElementById('filterBy').value;
        const search = document.getElementById('searchInput').value;
        window.location.href = '@Url.Action("Index", "Pessoa", new { page = 0 })&filterBy=' + filterBy + '&search=' + encodeURIComponent(search);
    }

    function clearFilters() {
        document.getElementById('searchInput').value = '';
        document.getElementById('filterBy').value = 'Nome';
        window.location.href = '@Url.Action("Index", "Pessoa")';
    }

    document.getElementById('searchInput')?.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            applyFilter();
        }
    });

    document.querySelectorAll('.table-modern tbody tr[data-details-url]').forEach(row => {
        row.addEventListener('click', function() {
            const url = this.getAttribute('data-details-url');
            if (url) window.location.href = url;
        });
        row.style.cursor = 'pointer';
    });
</script>
