@model FrotaWeb.Models.PessoaViewModel
@using Core.DTO
@using Core

@{
    var frotas = ViewData["Frotas"] as IEnumerable<FrotaDTO> ?? Enumerable.Empty<FrotaDTO>();
    var papeis = ViewData["Papeis"] as IEnumerable<Papelpessoa> ?? Enumerable.Empty<Papelpessoa>();
    var estados = ViewData["Estados"] as List<string>;
    var SeletorDeFrotaEnable = (bool)(ViewData["SeletorDeFrotaEnable"] ?? false);
    var entityName = "Pessoa";
    var controllerName = "Pessoa";
}

<div class="edit-page">
    <div class="edit-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="edit-title">Editar @entityName</h1>
    </div>

    <div class="edit-card">
        <form asp-action="Edit" method="post" class="edit-form">
            <div asp-validation-summary="ModelOnly" class="form-error"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Nome" class="form-label">
                        <i class="fas fa-user"></i>
                        Nome
                    </label>
                    <div class="input-group">
                        <i class="fas fa-user input-icon"></i>
                        <input asp-for="Nome" class="form-input input-endereco" placeholder="Nome completo" />
                    </div>
                    <span asp-validation-for="Nome" class="form-error-text"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cpf" class="form-label">
                        <i class="fas fa-id-card"></i>
                        CPF
                    </label>
                    <div class="input-group">
                        <i class="fas fa-id-card input-icon"></i>
                        <input asp-for="Cpf" class="form-input input-cpf" placeholder="000.000.000-00" maxlength="14" />
                    </div>
                    <span asp-validation-for="Cpf" class="form-error-text"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email
                    </label>
                    <div class="input-group">
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Email" class="form-input input-email" type="email" placeholder="email@exemplo.com" />
                    </div>
                    <span asp-validation-for="Email" class="form-error-text"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefone" class="form-label">
                        <i class="fas fa-phone"></i>
                        Telefone
                    </label>
                    <div class="input-group">
                        <i class="fas fa-phone input-icon"></i>
                        <input asp-for="Telefone" class="form-input input-telefone" placeholder="(00) 00000-0000" maxlength="15" />
                    </div>
                    <span asp-validation-for="Telefone" class="form-error-text"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Cep" class="form-label">
                        <i class="fas fa-map-marker-alt"></i>
                        CEP
                    </label>
                    <div class="input-group">
                        <i class="fas fa-map-marker-alt input-icon"></i>
                        <input asp-for="Cep" class="form-input input-cpf" id="cep" maxlength="9" placeholder="00000-000" />
                    </div>
                    <span asp-validation-for="Cep" class="form-error-text"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Rua" class="form-label">
                        <i class="fas fa-road"></i>
                        Rua
                    </label>
                    <div class="input-group">
                        <i class="fas fa-road input-icon"></i>
                        <input asp-for="Rua" class="form-input input-endereco" id="rua" placeholder="Nome da rua" />
                    </div>
                    <span asp-validation-for="Rua" class="form-error-text"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Bairro" class="form-label">
                        <i class="fas fa-map"></i>
                        Bairro
                    </label>
                    <div class="input-group">
                        <i class="fas fa-map input-icon"></i>
                        <input asp-for="Bairro" class="form-input input-md" id="bairro" placeholder="Nome do bairro" />
                    </div>
                    <span asp-validation-for="Bairro" class="form-error-text"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Numero" class="form-label">
                        <i class="fas fa-hashtag"></i>
                        Número
                    </label>
                    <div class="input-group">
                        <i class="fas fa-hashtag input-icon"></i>
                        <input asp-for="Numero" class="form-input input-numero" placeholder="123" />
                    </div>
                    <span asp-validation-for="Numero" class="form-error-text"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Complemento" class="form-label">
                    <i class="fas fa-building"></i>
                    Complemento
                </label>
                <div class="input-group">
                    <i class="fas fa-building input-icon"></i>
                    <input asp-for="Complemento" class="form-input input-md" placeholder="Complemento (opcional)" />
                </div>
                <span asp-validation-for="Complemento" class="form-error-text"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Cidade" class="form-label">
                        <i class="fas fa-city"></i>
                        Cidade
                    </label>
                    <div class="input-group">
                        <i class="fas fa-city input-icon"></i>
                        <input asp-for="Cidade" class="form-input input-md" id="cidade" placeholder="Nome da cidade" />
                    </div>
                    <span asp-validation-for="Cidade" class="form-error-text"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Estado" class="form-label">
                        <i class="fas fa-flag"></i>
                        Estado
                    </label>
                    <div class="select-wrapper">
                        <select asp-for="Estado" class="select-modern select-full" id="Estado">
                            @if (!estados.Any())
                            {
                                <option value="" disabled selected hidden>Selecione um estado</option>
                            }
                            else
                            {
                                foreach (var estado in estados)
                                {
                                    <option value="@estado" selected="@(Model.Estado == estado)">@estado</option>
                                }
                            }
                        </select>
                    </div>
                    <span asp-validation-for="Estado" class="form-error-text"></span>
                </div>
            </div>

            <div class="form-row">
                @if (SeletorDeFrotaEnable)
                {
                    <div class="form-group">
                        <label asp-for="IdFrota" class="form-label">
                            <i class="fas fa-truck"></i>
                            Frota
                        </label>
                        <div class="select-wrapper">
                            <select asp-for="IdFrota" class="select-modern select-full">
                                @if (!frotas.Any())
                                {
                                    <option value="" disabled selected hidden>Selecione uma frota</option>
                                }
                                else
                                {
                                    foreach (var frota in frotas)
                                    {
                                        <option value="@frota.Id" selected="@(Model.IdFrota == frota.Id)">@frota.Nome</option>
                                    }
                                }
                            </select>
                        </div>
                        <span asp-validation-for="IdFrota" class="form-error-text"></span>
                    </div>
                }

                <div class="form-group">
                    <label asp-for="IdPapelPessoa" class="form-label">
                        <i class="fas fa-user-tag"></i>
                        Papel
                    </label>
                    <div class="select-wrapper">
                        <select asp-for="IdPapelPessoa" class="select-modern select-full">
                            @if (!papeis.Any())
                            {
                                <option value="" disabled selected hidden>Selecione um papel</option>
                            }
                            else
                            {
                                foreach (var papel in papeis)
                                {
                                    <option value="@papel.Id" selected="@(Model.IdPapelPessoa == papel.Id)">@papel.Papel</option>
                                }
                            }
                        </select>
                    </div>
                    <span asp-validation-for="IdPapelPessoa" class="form-error-text"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Ativo" class="form-label">
                        <i class="fas fa-check-circle"></i>
                        Status
                    </label>
                    <div class="select-wrapper">
                        <select asp-for="Ativo" class="select-modern select-full">
                            <option value="1" selected="@(Model.Ativo == 1)">Ativo</option>
                            <option value="0" selected="@(Model.Ativo == 0)">Inativo</option>
                        </select>
                    </div>
                    <span asp-validation-for="Ativo" class="form-error-text"></span>
                </div>
            </div>

            <div class="form-actions">
                <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById("cep")?.addEventListener("blur", function () {
            const cep = this.value.replace(/\D/g, "");
            if (cep.length === 8) {
                fetch(`https://viacep.com.br/ws/${cep}/json/`)
                    .then(response => response.json())
                    .then(data => {
                        if (!data.erro) {
                            document.getElementById("rua").value = data.logradouro || "";
                            document.getElementById("bairro").value = data.bairro || "";
                            document.getElementById("cidade").value = data.localidade || "";
                            const estadoSelect = document.getElementById("Estado");
                            estadoSelect.value = data.uf || "";
                        }
                    })
                    .catch(error => console.error("Erro ao consultar o CEP:", error));
            }
        });
    </script>
}
