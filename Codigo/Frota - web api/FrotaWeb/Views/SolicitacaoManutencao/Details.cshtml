@model FrotaWeb.Models.SolicitacaoManutencaoViewModel

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />

<main class="container mt-4">
	<h4 class="page-title fs-2">
		<i class="fa fa-tools mr-3"></i>
		Solicitação de Manutenção
	</h4>
	<h1 class="my-text-label fs-3 mt-4 mb-4">Visualizar Solicitação</h1>
	<div class="creator-form fs-5">
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="type-container offset-md-1 itens-center">
					<label class="label">Veículo</label>
					<p>@Model.IdVeiculo</p>
				</div>
			</div>
			<div class="col-md-6">
				<div class="type-container offset-md-2 itens-center">
					<label class="label">Pessoa</label>
					<p>@Model.IdPessoa</p>
				</div>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="type-container offset-md-1 itens-center">
					<label class="label">Data de Solicitação</label>
					<p>@Model.DataSolicitacao</p>
				</div>
			</div>
			<div class="col-md-6">
				<div class="type-container offset-md-2 itens-center">
					<label class="label">Descrição</label>
					<textarea asp-for="DescricaoProblema" class="form-control bg-white" placeholder="" readonly>@Model.DescricaoProblema</textarea>
				</div>
			</div>
		</div>
		<div class="row mt-4">
			<div class="col-12 col-md-6 mb-2 mb-md-0 itens-center">
				<a asp-action="Index" class="my-button btn btn-danger btn-sm w-50 w-md-auto">Voltar</a>
			</div>
			<div class="col-12 col-md-6 d-flex justify-content-md-end itens-center">
				<a href="@Url.Action("Edit", "Solicitacaomanutencao", new { id = Model.Id })" class="my-button btn btn-success btn-sm w-50 w-md-auto botao-sucesso">Editar</a>
			</div>
		</div>
	</div>
</main>