@model FrotaWeb.Models.SolicitacaoManutencaoViewModel
@using System.Globalization

@{
    var culture = new CultureInfo("pt-BR");
    var entityName = "Solicitação de Manutenção";
    var controllerName = "SolicitacaoManutencao";
}

<div class="details-page">
    <div class="details-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="details-title">Visualizar @entityName</h1>
    </div>

    <div class="details-card">
        <div class="details-body">
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-hashtag"></i>
                    Código
                </span>
                <span class="details-value">@Model.Id</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-car"></i>
                    Veículo
                </span>
                <span class="details-value">@(Model.PlacaVeiculo ?? Model.IdVeiculo.ToString())</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-user"></i>
                    Pessoa
                </span>
                <span class="details-value">@(Model.NomePessoa ?? Model.IdPessoa.ToString())</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-calendar-alt"></i>
                    Data de Solicitação
                </span>
                <span class="details-value">@Model.DataSolicitacao.ToString("dd/MM/yyyy HH:mm", culture)</span>
            </div>
            <div class="details-item">
                <span class="details-label">
                    <i class="fas fa-file-alt"></i>
                    Descrição do Problema
                </span>
                <span class="details-value">@Model.DescricaoProblema</span>
            </div>
        </div>

        <div class="details-actions">
            <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                <i class="fas fa-list"></i> Voltar para Lista
            </a>
            <a asp-action="Edit" asp-controller="@controllerName" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>
</div>
