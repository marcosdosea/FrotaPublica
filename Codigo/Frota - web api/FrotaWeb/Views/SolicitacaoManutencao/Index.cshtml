@model IEnumerable<FrotaWeb.Models.SolicitacaoManutencaoViewModel>
@using Core.DTO
@using System.Globalization

@{
    var veiculos = ViewData["Veiculos"] as IEnumerable<VeiculoDTO> ?? Enumerable.Empty<VeiculoDTO>();
    var culture = new CultureInfo("pt-BR");
}

<main class="main-content">
    <div class="page-header">
        <div class="page-header-content">
            <a href="javascript:history.back()" class="btn btn-tertiary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
            <h1 class="page-title">Solicitações de Manutenção</h1>
        </div>
        <div class="page-header-actions">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Criar Novo
            </a>
        </div>
    </div>

    <div class="filters-container">
        <div class="filter-group">
            <label class="filter-label">Buscar</label>
            <div class="input-group">
                <i class="fas fa-search input-icon"></i>
                <input type="text" class="form-input" placeholder="Buscar..." id="searchInput" />
            </div>
        </div>
        <div class="filter-group">
            <label class="filter-label">Filtrar por Veículo</label>
            <div class="select-wrapper">
                <select class="select-modern select-md" id="veiculoFilter" onchange="filterByVeiculo()">
                    <option value="">Todos os Veículos</option>
                    @foreach (var veiculo in veiculos)
                    {
                        var isSelected = ViewBag.IdVeiculoSelecionado != null && ViewBag.IdVeiculoSelecionado == veiculo.Id;
                        if (isSelected)
                        {
                            <option value="@veiculo.Id" selected>@veiculo.Placa</option>
                        }
                        else
                        {
                            <option value="@veiculo.Id">@veiculo.Placa</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="filter-actions">
            <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                <i class="fas fa-times"></i> Limpar
            </button>
        </div>
    </div>

    <div class="table-container">
        <div class="table-wrapper">
            <table class="table-modern">
                <thead>
                    <tr>
                        <th>Veículo</th>
                        <th>Solicitante</th>
                        <th>Data Solicitação</th>
                        <th>Descrição do Problema</th>
                        <th class="text-right">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-id="@item.Id" data-details-url="@Url.Action("Details", "SolicitacaoManutencao", new { id = item.Id })">
                            <td>@Html.DisplayFor(modelItem => item.PlacaVeiculo)</td>
                            <td>@Html.DisplayFor(modelItem => item.NomePessoa)</td>
                            <td>@(item.DataSolicitacao.ToString("dd/MM/yyyy", culture))</td>
                            <td>@Html.DisplayFor(modelItem => item.DescricaoProblema)</td>
                            <td>
                                <div class="table-actions">
                                    <a href="@Url.Action("Details", "SolicitacaoManutencao", new { id = item.Id })" class="table-action-btn details" title="Detalhes" onclick="event.stopPropagation()">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "SolicitacaoManutencao", new { id = item.Id })" class="table-action-btn edit" title="Editar" onclick="event.stopPropagation()">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "SolicitacaoManutencao", new { id = item.Id })" class="table-action-btn delete" title="Excluir" onclick="event.stopPropagation()">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @{
        var pagedResult = ViewBag.PagedResult as FrotaWeb.Models.PagedResult<SolicitacaoManutencaoViewModel>;
    }
    @if (pagedResult != null && pagedResult.TotalPages > 1)
    {
        <nav class="pagination-container">
            <div class="pagination">
                @if (pagedResult.HasPreviousPage)
                {
                    <a href="@Url.Action("Index", "SolicitacaoManutencao", new { page = pagedResult.CurrentPage - 1, idVeiculo = ViewBag.IdVeiculoSelecionado })" class="pagination-btn">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                }
                
                @for (int i = Math.Max(0, pagedResult.CurrentPage - 2); i <= Math.Min(pagedResult.TotalPages - 1, pagedResult.CurrentPage + 2); i++)
                {
                    <a href="@Url.Action("Index", "SolicitacaoManutencao", new { page = i, idVeiculo = ViewBag.IdVeiculoSelecionado })" class="pagination-btn @(i == pagedResult.CurrentPage ? "active" : "")">
                        @(i + 1)
                    </a>
                }
                
                @if (pagedResult.HasNextPage)
                {
                    <a href="@Url.Action("Index", "SolicitacaoManutencao", new { page = pagedResult.CurrentPage + 1, idVeiculo = ViewBag.IdVeiculoSelecionado })" class="pagination-btn">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                }
            </div>
        </nav>
    }
</main>

<script>
    function clearFilters() {
        document.getElementById('searchInput').value = '';
        document.getElementById('veiculoFilter').value = '';
        window.location.href = '@Url.Action("Index", "SolicitacaoManutencao")';
    }

    function filterByVeiculo() {
        const veiculoId = document.getElementById('veiculoFilter').value;
        window.location.href = '@Url.Action("Index", "SolicitacaoManutencao")?idVeiculo=' + veiculoId;
    }

    document.getElementById('searchInput')?.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('.table-modern tbody tr');
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });

    document.querySelectorAll('.table-modern tbody tr[data-details-url]').forEach(row => {
        row.addEventListener('click', function() {
            const url = this.getAttribute('data-details-url');
            if (url) window.location.href = url;
        });
        row.style.cursor = 'pointer';
    });
</script>
