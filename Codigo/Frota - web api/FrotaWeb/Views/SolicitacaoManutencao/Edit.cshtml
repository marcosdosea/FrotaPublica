@model FrotaWeb.Models.SolicitacaoManutencaoViewModel
@using Core.DTO
@using System.Globalization

@{
    var veiculos = ViewData["Veiculos"] as IEnumerable<VeiculoDTO> ?? Enumerable.Empty<VeiculoDTO>();
    var pessoas = ViewData["Pessoas"] as IEnumerable<PessoaDTO> ?? Enumerable.Empty<PessoaDTO>();
    var entityName = "Solicitação de Manutenção";
    var controllerName = "SolicitacaoManutencao";
    var culture = new CultureInfo("pt-BR");
}

<div class="edit-page">
    <div class="edit-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="edit-title">Editar @entityName</h1>
    </div>

    <div class="edit-card">
        <form asp-action="Edit" method="post" class="edit-form">
            <div asp-validation-summary="ModelOnly" class="form-error"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="IdVeiculo" class="form-label">
                        <i class="fas fa-car"></i>
                        Veículo
                    </label>
                    <div class="select-wrapper">
                        <select asp-for="IdVeiculo" class="select-modern select-full">
                            @if (!veiculos.Any())
                            {
                                <option value="" disabled selected hidden>Selecione um veículo</option>
                            }
                            else
                            {
                                foreach (var veiculo in veiculos)
                                {
                                    <option value="@veiculo.Id" selected="@(Model.IdVeiculo == veiculo.Id)">@veiculo.Placa</option>
                                }
                            }
                        </select>
                    </div>
                    <span asp-validation-for="IdVeiculo" class="form-error-text"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdPessoa" class="form-label">
                        <i class="fas fa-user"></i>
                        Solicitante
                    </label>
                    <div class="select-wrapper">
                        <select asp-for="IdPessoa" class="select-modern select-full">
                            @if (!pessoas.Any())
                            {
                                <option value="" disabled selected hidden>Selecione um solicitante</option>
                            }
                            else
                            {
                                foreach (var pessoa in pessoas)
                                {
                                    <option value="@pessoa.Id" selected="@(Model.IdPessoa == pessoa.Id)">@pessoa.Nome</option>
                                }
                            }
                        </select>
                    </div>
                    <span asp-validation-for="IdPessoa" class="form-error-text"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DataSolicitacao" class="form-label">
                    <i class="fas fa-calendar-alt"></i>
                    Data de Solicitação
                </label>
                <div class="input-group">
                    <i class="fas fa-calendar input-icon"></i>
                    <input asp-for="DataSolicitacao" class="form-input input-data" type="datetime-local" />
                </div>
                <span asp-validation-for="DataSolicitacao" class="form-error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="DescricaoProblema" class="form-label">
                    <i class="fas fa-file-alt"></i>
                    Descrição do Problema
                </label>
                <div class="input-group">
                    <i class="fas fa-file-alt input-icon"></i>
                    <textarea asp-for="DescricaoProblema" class="form-input" rows="4" placeholder="Descreva o problema que necessita manutenção"></textarea>
                </div>
                <span asp-validation-for="DescricaoProblema" class="form-error-text"></span>
            </div>

            <div class="form-actions">
                <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
