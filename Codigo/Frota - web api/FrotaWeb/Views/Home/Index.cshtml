                            </a>
                            <a href="@Url.Action("Index", "Abastecimento")" class="quick-action-item">
                                <div class="action-icon">
                                    <i class="fas fa-gas-pump"></i>
                                </div>
                                <span>Abastecer</span>
                            </a>
                            <a href="@Url.Action("Index", "Vistoria")" class="quick-action-item">
                                <div class="action-icon">
                                    <i class="fas fa-clipboard-check"></i>
                                </div>
                                <span>Vistoria</span>
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Create", "Veiculo")" class="quick-action-item">
