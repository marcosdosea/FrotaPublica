@model IEnumerable<FrotaWeb.Models.ManutencaoPecaInsumoViewModel>

<link rel="stylesheet" href="~/css/index-pages.css" asp-append-version="true" />

<main class="main_content container">
	<div class="titulo-pagina">
		<a href="javascript:history.back()" class="voltar">
			<i class="fa fa-arrow-left"></i> Voltar
		</a>
		<h1>Manuteções, Peças e Insumos</h1>
		<div class="acoes">
			<a asp-action="Create" class="btn btn-primario">Criar</a>
		</div>
	</div>
	<div class="table-responsive">
		<table class="tabela">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.IdManutencao)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.IdPecaInsumo)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.IdMarcaPecaInsumo)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Quantidade)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.MesesGarantia)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.KmGarantia)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.ValorIndividual)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Subtotal)
					</th>
					<th class="column-15"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.IdManutencao)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.IdPecaInsumo)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.IdMarcaPecaInsumo)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Quantidade)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.MesesGarantia)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.KmGarantia)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.ValorIndividual)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Subtotal)
						</td>
						<td>
							<a href="@Url.Action("Edit", "ManutencaoPecaInsumo", new { idManutencao = item.IdManutencao, idPecaInsumo = item.IdPecaInsumo })" class="edit icone" title="Editar" data-toggle="tooltip">
								<i class="fa fa-pencil-alt cor" aria-hidden="true"></i>
							</a>
							<a href="@Url.Action("Details", "ManutencaoPecaInsumo", new { idManutencao = item.IdManutencao, idPecaInsumo = item.IdPecaInsumo })" class="details icone" title="Detalhes" data-toggle="tooltip">
								<i class="fa fa-eye cor" aria-hidden="true"></i>
							</a>
							<a href="@Url.Action("Delete", "ManutencaoPecaInsumo", new { idManutencao = item.IdManutencao, idPecaInsumo = item.IdPecaInsumo })" class="delete icone" title="Excluir" data-toggle="tooltip">
								<i class="fa fa-trash cor" aria-hidden="true"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</main>