@model FrotaWeb.Models.PecaInsumoViewModel

@{
    var entityName = "Peça/Insumo";
    var controllerName = "PecaInsumo";
}

<div class="edit-page">
    <div class="edit-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="edit-title">Editar @entityName</h1>
    </div>

    <div class="edit-card">
        <form asp-action="Edit" method="post" class="edit-form">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="form-error"></div>
            
            <div class="form-group">
                <label asp-for="Descricao" class="form-label">
                    <i class="fas fa-file-alt"></i>
                    Descrição
                </label>
                <div class="input-group">
                    <i class="fas fa-file-alt input-icon"></i>
                    <textarea asp-for="Descricao" class="form-input" rows="4" placeholder="Descreva a peça ou insumo"></textarea>
                </div>
                <span asp-validation-for="Descricao" class="form-error-text"></span>
            </div>

            <div class="form-actions">
                <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
