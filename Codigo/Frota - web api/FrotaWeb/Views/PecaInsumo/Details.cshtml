@model FrotaWeb.Models.PecaInsumoViewModel

@{
    var entityName = "Peça/Insumo";
    var controllerName = "PecaInsumo";
}

<div class="details-page">
    <div class="details-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="details-title">Detalhes do @entityName</h1>
    </div>

    <div class="details-card">
        <div class="details-body">
            <div class="details-item">
                <div class="details-label">
                    <i class="fas fa-hashtag"></i>
                    ID
                </div>
                <div class="details-value">@Html.DisplayFor(model => model.Id)</div>
            </div>

            <div class="details-item">
                <div class="details-label">
                    <i class="fas fa-file-alt"></i>
                    Descrição
                </div>
                <div class="details-value">@Html.DisplayFor(model => model.Descricao)</div>
            </div>
        </div>

        <div class="details-actions">
            <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar para Lista
            </a>
            <a asp-action="Edit" asp-controller="@controllerName" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>
</div>
