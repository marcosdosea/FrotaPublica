@model FrotaWeb.Models.PecaInsumoViewModel

@{
    var entityName = "Peça/Insumo";
    var controllerName = "PecaInsumo";
}

<div class="delete-page">
    <div class="delete-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="delete-title">Excluir @entityName</h1>
    </div>

    <div class="delete-card">
        <div class="alert alert-warning" style="background: var(--warning-50); border: 1px solid var(--warning-200); border-radius: var(--radius-md); padding: var(--space-4); margin-bottom: var(--space-6);">
            <div style="display: flex; align-items: center; gap: var(--space-3);">
                <i class="fas fa-exclamation-triangle" style="color: var(--warning-600); font-size: var(--text-xl);"></i>
                <div>
                    <strong style="color: var(--warning-700);">Atenção!</strong>
                    <p style="color: var(--warning-700); margin: var(--space-1) 0 0 0; font-size: var(--text-sm);">
                        Esta ação não pode ser desfeita. Tem certeza que deseja excluir este registro?
                    </p>
                </div>
            </div>
        </div>

        <div class="details-body">
            <div class="details-item">
                <div class="details-label">
                    <i class="fas fa-hashtag"></i>
                    ID
                </div>
                <div class="details-value">@Html.DisplayFor(model => model.Id)</div>
            </div>

            <div class="details-item">
                <div class="details-label">
                    <i class="fas fa-file-alt"></i>
                    Descrição
                </div>
                <div class="details-value">@Html.DisplayFor(model => model.Descricao)</div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="form-actions">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Confirmar Exclusão
            </button>
        </form>
    </div>
</div>
