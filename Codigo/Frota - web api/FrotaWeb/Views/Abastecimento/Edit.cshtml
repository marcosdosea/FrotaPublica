@model FrotaWeb.Models.AbastecimentoViewModel

@{
    var entityName = "Abastecimento";
    var controllerName = "Abastecimento";
}

<div class="edit-page">
    <div class="edit-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="edit-title">
            <i class="fas fa-edit"></i>
            Editar @entityName
        </h1>
    </div>

    <div class="edit-card">
        <form asp-action="Edit" method="post" class="edit-form">
            <div asp-validation-summary="ModelOnly" class="form-error"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="IdPessoa" class="form-label">Pessoa</label>
                <div class="input-group">
                    <i class="fas fa-user input-icon"></i>
                    <input asp-for="IdPessoa" class="form-input input-numero" type="number" />
                </div>
                <span asp-validation-for="IdPessoa" class="form-error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdFornecedor" class="form-label">Fornecedor</label>
                <div class="input-group">
                    <i class="fas fa-building input-icon"></i>
                    <input asp-for="IdFornecedor" class="form-input input-numero" type="number" />
                </div>
                <span asp-validation-for="IdFornecedor" class="form-error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdVeiculo" class="form-label">Veículo</label>
                <div class="input-group">
                    <i class="fas fa-car input-icon"></i>
                    <input asp-for="IdVeiculo" class="form-input input-numero" type="number" />
                </div>
                <span asp-validation-for="IdVeiculo" class="form-error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataHora" class="form-label">Data/Hora</label>
                <div class="input-group">
                    <i class="fas fa-calendar input-icon"></i>
                    <input asp-for="DataHora" class="form-input input-data" type="datetime-local" />
                </div>
                <span asp-validation-for="DataHora" class="form-error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="Odometro" class="form-label">Odômetro</label>
                <div class="input-group">
                    <i class="fas fa-tachometer-alt input-icon"></i>
                    <input asp-for="Odometro" class="form-input input-numero" placeholder="26000" />
                </div>
                <span asp-validation-for="Odometro" class="form-error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="Litros" class="form-label">Litros</label>
                <div class="input-group">
                    <i class="fas fa-gas-pump input-icon"></i>
                    <input asp-for="Litros" class="form-input input-valor" placeholder="50.00" />
                </div>
                <span asp-validation-for="Litros" class="form-error-text"></span>
            </div>

            <div class="form-actions">
                <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/input-masks.js" asp-append-version="true"></script>
}
