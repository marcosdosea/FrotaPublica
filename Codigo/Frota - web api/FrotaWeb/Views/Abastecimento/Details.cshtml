@model FrotaWeb.Models.AbastecimentoViewModel
@using System.Globalization

@{
    var culture = new CultureInfo("pt-BR");
    var entityName = "Abastecimento";
    var controllerName = "Abastecimento";
}

<div class="details-page">
    <div class="details-header">
        <a href="javascript:history.back()" class="btn btn-tertiary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="details-title">
            <i class="fas fa-eye"></i>
            Visualizar @entityName
        </h1>
    </div>

    <div class="details-card">
        <div class="details-body">
            <div class="details-item">
                <span class="details-label">Código</span>
                <span class="details-value">@Model.Id</span>
            </div>
            <div class="details-item">
                <span class="details-label">Fornecedor</span>
                <span class="details-value">@Model.IdFornecedor</span>
            </div>
            <div class="details-item">
                <span class="details-label">Veículo</span>
                <span class="details-value">@Model.IdVeiculo</span>
            </div>
            <div class="details-item">
                <span class="details-label">Frota</span>
                <span class="details-value">@Model.IdFrota</span>
            </div>
            <div class="details-item">
                <span class="details-label">Pessoa</span>
                <span class="details-value">@Model.IdPessoa</span>
            </div>
            <div class="details-item">
                <span class="details-label">Data/Hora</span>
                <span class="details-value">@Model.DataHora.ToString("dd/MM/yyyy HH:mm", culture)</span>
            </div>
            <div class="details-item">
                <span class="details-label">Odômetro</span>
                <span class="details-value">@Model.Odometro km</span>
            </div>
            <div class="details-item">
                <span class="details-label">Litros</span>
                <span class="details-value">@Model.Litros L</span>
            </div>
        </div>

        <div class="details-actions">
            <a asp-action="Index" asp-controller="@controllerName" class="btn btn-secondary">
                <i class="fas fa-list"></i> Voltar para Lista
            </a>
            <a asp-action="Edit" asp-controller="@controllerName" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>
</div>
