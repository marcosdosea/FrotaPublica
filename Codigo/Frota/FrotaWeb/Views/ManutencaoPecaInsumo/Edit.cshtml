@model FrotaWeb.Models.ManutencaoPecaInsumoViewModel

<link rel="stylesheet" href="~/css/form-pages.css" asp-append-version="true" />

<main class="main_content container">
	<div class="titulo-pagina">
		<a href="javascript:history.back()" class="voltar">
			<i class="fa fa-arrow-left"></i> Voltar
		</a>
		<h1>Cadastro de Peças e Insumos de Manutenção</h1>
	</div>
	<div class="fomulario">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="IdManutencao" class="control-label"></label>
				<input asp-for="IdManutencao" class="form-control" />
				<span asp-validation-for="IdManutencao" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="IdPecaInsumo" class="control-label"></label>
				<input asp-for="IdPecaInsumo" class="form-control" />
				<span asp-validation-for="IdPecaInsumo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="IdMarcaPecaInsumo" class="control-label"></label>
				<input asp-for="IdMarcaPecaInsumo" class="form-control" />
				<span asp-validation-for="IdMarcaPecaInsumo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Quantidade" class="control-label"></label>
				<input asp-for="Quantidade" class="form-control" />
				<span asp-validation-for="Quantidade" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MesesGarantia" class="control-label"></label>
				<input asp-for="MesesGarantia" class="form-control" />
				<span asp-validation-for="MesesGarantia" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="KmGarantia" class="control-label"></label>
				<input asp-for="KmGarantia" class="form-control" />
				<span asp-validation-for="KmGarantia" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ValorIndividual" class="control-label"></label>
				<input asp-for="ValorIndividual" class="form-control" />
				<span asp-validation-for="ValorIndividual" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Subtotal" class="control-label"></label>
				<input asp-for="Subtotal" class="form-control" />
				<span asp-validation-for="Subtotal" class="text-danger"></span>
			</div>
			<div class="buttons">
				<input type="submit" value="Salvar Alterações" class="btn btn-primary" />
			</div>
		</form>
	</div>
</main>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
