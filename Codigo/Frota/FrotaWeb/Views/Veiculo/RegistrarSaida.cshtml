@model FrotaWeb.Models.PercursoViewModel

<link rel="stylesheet" href="~/css/form-pages.css" asp-append-version="true" />

<main class="main_content container">
    <div class="titulo-pagina">
        <a href="javascript:history.back()" class="voltar">
            <i class="fa fa-arrow-left"></i> Voltar
        </a>
        <h1>Registrar Saída do Veículo</h1>
    </div>
    <div class="fomulario">
        <form asp-action="RegistrarSaida" asp-route-idVeiculo="@ViewBag.IdVeiculo" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="IdVeiculo" />
            <input type="hidden" asp-for="IdPessoa" />
            <input type="hidden" asp-for="DataHoraSaida" />
            <input type="hidden" asp-for="OdometroInicial" />

            <div class="form-group">
                <label asp-for="LocalPartida" class="control-label">Local de Partida</label>
                <input asp-for="LocalPartida" class="form-control" />
                <span asp-validation-for="LocalPartida" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LocalChegada" class="control-label">Local de Chegada</label>
                <input asp-for="LocalChegada" class="form-control" />
                <span asp-validation-for="LocalChegada" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Motivo" class="control-label">Motivo do Uso</label>
                <textarea asp-for="Motivo" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>

            <div class="buttons">
                <input type="submit" value="Registrar Saída" class="btn btn-primary" />
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 